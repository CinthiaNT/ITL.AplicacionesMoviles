<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:textAlignment="textEnd"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/txt_pantalla"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="L O A D"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/clear"
                android:onClick="onClick"
                android:text="cl"
                android:textSize="50dp" />

            <Button
                android:id="@+id/btn_eliminar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="←"
                android:textSize="50dp"/>

            <Button
                android:id="@+id/btn_menosDecimales"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="-dec"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn_masDecimales"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="+dec"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_raizCuadrada"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="√"
                android:textSize="25dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:background="@color/teclas"
            android:onClick="onClick"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:background="@color/teclas"
            android:onClick="onClick"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:background="@color/teclas"
            android:onClick="onClick"
            android:text="9"
            android:textSize="30dp"/>
            <Button
                android:id="@+id/btn_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="/"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_potencia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="x^"
                android:textSize="25dp" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="4"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="6"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/btn_multiplica"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="x"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/btn_factorial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="!"
                android:textSize="30dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="1"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="3"
                android:textSize="30dp"/>



            <Button
                android:id="@+id/btn_menos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="-"
                android:textSize="35dp"/>

            <Button
                android:id="@+id/btn_porcentaje"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="%"
                android:textSize="35dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_negativo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="+/-"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_punto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="."
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_mas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/teclas"
                android:onClick="onClick"
                android:text="+"
                android:textSize="35dp"/>

            <Button
                android:id="@+id/btn_igual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:background="@color/igual"
                android:onClick="onClick"
                android:text="="
                android:textSize="50dp" />
        </TableRow>

    </TableLayout>
</LinearLayout>